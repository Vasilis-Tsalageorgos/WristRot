<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/toolParam"
        layout="@layout/toolbar"></include>

    <RelativeLayout
        android:id="@+id/rl_param"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_below="@+id/toolParam"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_note"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:text="Note:"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_width="wrap_content"
            android:text="@string/info_start_tracking_text"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/tv_note"
            android:layout_height="wrap_content"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_editText"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:hint="@string/editinfo"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_corner"
            android:layout_height="40dp"></EditText>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_button"
        android:layout_width="wrap_content"
        android:layout_below="@+id/rl_editText"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_start"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:background="@drawable/round_button"
            android:text="@string/start_button"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"></Button>

    </RelativeLayout>

</RelativeLayout>